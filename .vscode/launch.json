{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Services/Catalog/Catalog.API/bin/Debug/net7.0/Catalog.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Services/Catalog/Catalog.API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Docker .NET Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/Services/Catalog/Catalog.API/Catalog.API.csproj"
            }
        },
        {
            "name": "Basket",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/Services/Basket/Basket.Core/bin/Debug/net7.0/Basket.Core.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Services/Basket/Basket.Core",
            "stopAtEntry": false,
            "externalConsole": false
        },
        {
            "name": "Discount",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/Services/Discount/Discount.Core/bin/Debug/net7.0/Discount.Core.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Services/Discount/Discount.Core",
            "stopAtEntry": false,
            "externalConsole": false
        }
    ],
    "compounds": [
        {
            "name": "Launch Basket&Discount",
            "configurations": [
                "Basket",
                "Discount"
            ]
        }
    ]
}